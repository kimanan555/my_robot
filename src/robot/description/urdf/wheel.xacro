<?xml version="1.0"?>
<robot name = "robot_wheel" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="$(find description)/urdf/properties.xacro"/>

    <xacro:macro name="wheel" params="name translation rotation parent">
        
        <gazebo>
            <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
                <robotNamespace>/my_robot</robotNamespace>
            </plugin>
        </gazebo>
        <link name="${name}_wheel">
            <inertial>
                <origin rpy="0 0 0" xyz="${WHEEL_COM}"/>
                <mass value="${WHEEL_M}"/>
                <inertia 
                    ixx="${WHEEL_Ixx}" 
                    ixy="${WHEEL_Ixy}" 
                    ixz="${WHEEL_Ixz}" 
                    iyy="${WHEEL_Iyy}" 
                    iyz="${WHEEL_Iyz}" 
                    izz="${WHEEL_Izz}"/>
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="${PI / 2} 0 0"/>
                <geometry>
                    <cylinder radius="${WHEEL_RADIUS}" length="0.02"/>
                </geometry>
            </visual>

            <collision>
                <origin xyz="0 0 0" rpy="${PI / 2} 0 0"/>
                <geometry>
                    <cylinder radius="${WHEEL_RADIUS}" length="0.02"/>
                </geometry>
            </collision>
        </link>

        <gazebo reference="${name}_wheel">
            <mu1>1.0</mu1>
            <mu2>1.0</mu2>
            <material>Gazebo/Blue</material>
        </gazebo>

        <joint name="${name}_wheel_joint" type="continuous">
            <origin xyz="${translation}" rpy="${rotation}"/>
            <parent link="${parent}"/>
            <child link="${name}_wheel"/>
            <axis xyz="0 1 0"/>

            <limit effort="${U_MAX}" velocity="${V_MAX}"/> 
            <dynamics damping="${WHEEL_JOINT_DAMP}"/>
        </joint>

        <transmission name="${name}_wheel_motor">
            <type>transmission_interface/SimpleTransmission</type>
            <joint name="${name}_wheel_joint">
                <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
            </joint>
            <actuator name="${name}_wheel_motor">
                <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
                <mechanicalReduction>1</mechanicalReduction>
            </actuator>
        </transmission>

    </xacro:macro>
</robot>